{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },

  "exclude": ["./node_modules/", "./coverage/"],
  "include": ["src/**/*"]
}
