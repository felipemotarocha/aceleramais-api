{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "outDir": "./dist",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stub.ts"
  ]
}
